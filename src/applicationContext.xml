<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="url"
			value="jdbc:mysql://localhost:3456/c1_parknshop">
		</property>
		<property name="username" value="bitranger"></property>
		<property name="password" value="psw-dev"></property>
	</bean>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
			<value>com.bitranger.parknshop.model.PsItemInfo</value>
			<value>com.bitranger.parknshop.model.PsRecipient</value>
			<value>com.bitranger.parknshop.model.PsTag</value>
			<value>com.bitranger.parknshop.model.PsComment</value>
			<value>com.bitranger.parknshop.model.PsAdministator</value>
			<value>com.bitranger.parknshop.model.PsOrder</value>
			<value>com.bitranger.parknshop.model.PsCustomer</value>
			<value>com.bitranger.parknshop.model.PsCategory</value>
			<value>com.bitranger.parknshop.model.PsShop</value>
			<value>com.bitranger.parknshop.model.PsSeller</value>
			<value>com.bitranger.parknshop.model.PsItem</value></list>
		</property>
	</bean>

</beans>